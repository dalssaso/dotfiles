k9s:
  liveViewAutoRefresh: false
  screenDumpDir: /Users/{{ .user }}/Library/Application Support/k9s/screen-dumps
  refreshRate: 2
  maxConnRetry: 5
  readOnly: false
  noExitOnCtrlC: false
  ui:
    enableMouse: false
    headless: false
    logoless: false
    crumbsless: false
    noIcons: false
    skin: catppuccin-latte
  skipLatestRevCheck: false
  disablePodCounting: false
  shellPod:
    image: busybox:1.35.0
    namespace: default
    limits:
      cpu: 100m
      memory: 100Mi
  imageScans:
    enable: false
    exclusions:
      namespaces: []
      labels: {}
  logger:
    tail: 100
    buffer: 5000
    sinceSeconds: -1
    fullScreenLogs: false
    textWrap: false
    showTime: false
  thresholds:
    cpu:
      critical: 90
      warn: 70
    memory:
      critical: 90
      warn: 70
views:
  v1/nodes:
    sortColumn: AGE:desc
    columns:
      - NAME
      - INTERNAL-IP
      - EKS-ROLE:.metadata.labels.node\.ifood\.com\.br/role
      - KOPS-ROLE:.metadata.labels.kops\.k8s\.io/instancegroup
      - STATUS
      - TAINTS
      - VERSION
      - PODS
      - CPU
      - "%CPU"
      - MEM
      - "%MEM"
      - AGE
